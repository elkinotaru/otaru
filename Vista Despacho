                modelo.addRow(new Object[]{lista.get(i).getFactura(),
                    conF.buscarCliente(conF.buscarFactura(lista.get(i).getFactura()).getCliente()),
                    "Cancelado"});
            }

        }
    }

    public void listarTodos() {
        //por medio de un BO creamos una lsita con todos los datos de productos
        //envia el modelo a la tabla
        ArrayList<Despacho> lista = new ArrayList<>();
        //llamamos el metodo que trae los productos y transforma los id de categoria y proveedor en sus nombres
        lista = conF.listarDespacho();
        DefaultTableModel modelo = (DefaultTableModel) jtDespacho.getModel();
        modelo.setRowCount(0);
        System.out.println(lista.size());
        for (int i = 0; i < lista.size(); i++) {
            if (lista.get(i).getEstado() == 1) {
                modelo.addRow(new Object[]{lista.get(i).getFactura(),
                    conF.buscarCliente(conF.buscarFactura(lista.get(i).getFactura()).getCliente()).getDireccion(),
                    "Preparando"});
            }
            if (lista.get(i).getEstado() == 2) {
                modelo.addRow(new Object[]{lista.get(i).getFactura(),
                    conF.buscarCliente(conF.buscarFactura(lista.get(i).getFactura()).getCliente()).getDireccion(),
                    "Entregado"});
            }
            if (lista.get(i).getEstado() == 3) {
                modelo.addRow(new Object[]{lista.get(i).getFactura(),
                    conF.buscarCliente(conF.buscarFactura(lista.get(i).getFactura()).getCliente()).getDireccion(),
                    "Cancelado"});
            }

        }
    }

